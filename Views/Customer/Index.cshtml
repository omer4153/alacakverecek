@model IEnumerable<alacakverecektakip.Models.Customer>
    @{
        ViewData["Title"] = "Müşteri Listesi";
    }

    <h2>Müşteriler</h2>

    <p>
        <a asp-action="Create" class="btn btn-primary">Yeni Müşteri Ekle</a>
    </p>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Adı</th>
                <th>Telefon</th>
                <th>Email</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Phone</td>
                    <td>@item.Email</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Düzenle</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
