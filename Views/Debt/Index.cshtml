@model IEnumerable<alacakverecektakip.Models.Debt>
    @{
        ViewData["Title"] = "Borç Listesi";
    }

    <h2>Borçlar</h2>

    <p>
        <a asp-action="Create" class="btn btn-primary">Yeni Kayıt</a>
    </p>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Müşteri</th>
                <th>Tutar</th>
                <th>Tip</th>
                <th>Açıklama</th>
                <th>Tarih</th>
                <th>İşlem</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Customer?.Name</td>
                    <td>@item.Amount ₺</td>
                    <td>@item.Type</td>
                    <td>@item.Description</td>
                    <td>@item.TransactionDate.ToShortDateString()</td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
